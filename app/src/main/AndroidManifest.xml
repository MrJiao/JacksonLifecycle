<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackson.jacksonlifecycle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".global_activity_lifecycle_demo.MyApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".glide_lifecycle_demo.GlideLifecycleDemoActivity"/>
        <activity android:name=".global_activity_lifecycle_demo.GlobalLifeDemoActivity"/>
        <activity android:name=".presenter_lifecycle_demo.PresenterDemoActivity"/>
    </application>

</manifest>